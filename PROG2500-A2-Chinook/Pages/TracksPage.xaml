<Page x:Class="PROG2500_A2_Chinook.Pages.TracksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG2500_A2_Chinook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TracksPage">
    <Page.Resources>
        <CollectionViewSource x:Key="trackViewSource"></CollectionViewSource>
    </Page.Resources>

    <StackPanel>
        <TextBlock Text="This is the Tracks Page!" FontSize="48"></TextBlock>
        <DataGrid Height="350" ItemsSource="{Binding Source={StaticResource trackViewSource}}" 
                  AutoGenerateColumns="False" CellStyle="{StaticResource tracksViewStylying}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" SortDirection="Ascending"/>
                <DataGridTextColumn Binding="{Binding FormattedPriceString}" Header="Price"/>
                <DataGridTextColumn Binding="{Binding Minutes}" Header="Legnth"/>
                <DataGridTextColumn Binding="{Binding MegaBytes}" Header="Size"/>
                <DataGridTextColumn Binding="{Binding Composer}" Header="Artists"/>

            </DataGrid.Columns>
        </DataGrid>

    </StackPanel>
</Page>
